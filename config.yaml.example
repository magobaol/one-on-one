# One-on-One Setup Configuration Template
# Copy this file to config.yaml and fill in your actual values

# Logging configuration
logging:
  level: INFO  # DEBUG, INFO, WARNING, ERROR

# Slack settings
slack:
  # 1Password CLI integration for secure token retrieval
  onepassword:
    cli:
      enabled: true
      item_name: ""  # Name of your 1Password item containing Slack token (e.g., "Company - Slack API")
      field_name: "credential"  # Field name within the item (common: "password", "credential", "api_token")
  
  # Photo settings
  photo_size: "512"  # Slack photo size (72, 192, 512, 1024)
  photo_storage: "./photos"  # Local storage for profile photos

# OmniFocus settings
omnifocus:
  # Method: applescript can create tags without tasks, callback_url requires a task
  method: "applescript"  # "applescript", "callback_url", or "api"
  tag_id: ""  # OmniFocus tag ID for the parent tag - get this from "Copy as Link"
  create_task: false  # If true, create a setup task; if false, just create the tag

# File paths and storage
paths:
  download_temp: "./temp"  # Temporary folder for downloads